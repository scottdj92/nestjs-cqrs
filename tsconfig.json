{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "noEmit": true,
        "paths": {
            "@app/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"]
}
